---
interface Props {
  title: string;
  description: string;
  image: string;
  category: string;
  link: string;
}

const { title, description, image, category, link } = Astro.props;
---

<article class="group relative overflow-hidden rounded-lg shadow-lg bg-white dark:bg-gray-800 transition-transform hover:scale-[1.02]">
  <a href={link} class="block">
    <div class="relative h-64 overflow-hidden">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      <span class="absolute top-4 right-4 px-3 py-1 bg-primary text-white text-sm rounded-full">
        {category}
      </span>
    </div>
    <div class="p-6">
      <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">{title}</h3>
      <p class="text-gray-600 dark:text-gray-400">{description}</p>
    </div>
  </a>
</article>