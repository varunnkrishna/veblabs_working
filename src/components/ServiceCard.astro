---
interface Props {
  title: string;
  description: string;
  icon: string;
  features?: string[];
  lang?: string;
}

const { title, description, icon, features = [], lang = 'en' } = Astro.props;
const isRTL = lang === 'ar';
---

<div class="group relative bg-gradient-to-b from-white to-gray-50 dark:from-gray-800 dark:to-gray-900 rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-500" dir={isRTL ? 'rtl' : 'ltr'}>
  {/* Gradient Overlay */}
  <div class="absolute inset-0 bg-gradient-to-t from-blue-500/5 to-purple-500/5 dark:from-blue-500/10 dark:to-purple-500/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  {/* Border Gradient */}
  <div class="absolute inset-0 bg-gradient-to-t from-blue-500/20 to-purple-500/20 dark:from-blue-400/20 dark:to-purple-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl" style="mask-image: linear-gradient(to bottom, transparent 95%, black 100%);"></div>
  
  <div class="relative p-8">
    {/* Icon Container */}
    <div class="w-16 h-16 mb-6 flex items-center justify-center bg-gradient-to-br from-blue-500/10 to-purple-500/10 dark:from-blue-400/20 dark:to-purple-400/20 text-blue-600 dark:text-blue-400 rounded-xl group-hover:scale-110 group-hover:rotate-3 transition-all duration-500">
      <i class={`fas fa-${icon} text-2xl`}></i>
    </div>
    
    {/* Content */}
    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
      {title}
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg leading-relaxed">
      {description}
    </p>
    
    {/* Features List */}
    <ul class="space-y-4">
      {features.map(feature => (
        <li class={`flex items-center text-gray-700 dark:text-gray-300 ${isRTL ? 'group-hover:-translate-x-1' : 'group-hover:translate-x-1'} transition-transform duration-300`}>
          <div class={`${isRTL ? 'ml-3' : 'mr-3'} flex-shrink-0`}>
            <div class="w-6 h-6 flex items-center justify-center rounded-full bg-gradient-to-br from-blue-500/20 to-purple-500/20 dark:from-blue-400/20 dark:to-purple-400/20 text-blue-600 dark:text-blue-400">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
          </div>
          <span class="text-base group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300">
            {feature}
          </span>
        </li>
      ))}
    </ul>
  </div>
</div>