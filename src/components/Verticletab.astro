<script>
document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.tab-link');
    const contents = document.querySelectorAll('.tab-content');

    const updateActiveState = (clickedTab) => {
        // Remove active states from all tabs
        tabs.forEach(tab => {
            tab.classList.remove('from-blue-600', 'to-blue-700', 'text-white', 'bg-gradient-to-r');
            tab.classList.add('bg-white', 'dark:bg-gray-900', 'text-gray-700', 'dark:text-gray-300');
        });

        // Add active state to clicked tab
        clickedTab.classList.remove('bg-white', 'dark:bg-gray-900', 'text-gray-700', 'dark:text-gray-300');
        clickedTab.classList.add('bg-gradient-to-r', 'from-blue-600', 'to-blue-700', 'text-white');

        // Hide all content
        contents.forEach(content => content.classList.add('hidden'));

        // Show the corresponding content
        const targetContent = document.querySelector(`[data-content="${clickedTab.getAttribute('data-tab')}"]`);
        targetContent.classList.remove('hidden');
    };

    tabs.forEach(tab => {
        tab.addEventListener('click', (event) => {
            event.preventDefault();
            updateActiveState(tab);
        });
    });
});
</script>