---
import { useTranslations, getLanguageDirection } from "../i18n/utils";

const { lang } = Astro.props;
const t = await useTranslations(lang);
const translations = await t('footer');
const isRTL = getLanguageDirection(lang) === 'rtl';

const currentYear = new Date().getFullYear();

// Social Media Links with Icons
const socialLinks = [
  { name: 'Twitter', url: 'https://x.com/veblabs', icon: 'fab fa-twitter' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/veblabs/', icon: 'fab fa-linkedin-in' },
  { name: 'GitHub', url: 'https://github.com/veblabs-tech', icon: 'fab fa-github' },
  { name: 'Instagram', url: 'https://www.instagram.com/veblabs', icon: 'fab fa-instagram' },
  { name: 'WhatsApp', url: 'https://wa.me/919908174097', icon: 'fab fa-whatsapp' }
];

// Contact Info
const contactInfo = {
  phone: '+91 9908174097',
  email: 'hi@veblabs.com'
};

// Quick Links
const quickLinks = translations.quickLinks.links;

// Services
const services = [
  'Web Development',
  'Mobile Apps',
  'UI/UX Design',
  'Digital Marketing'
];

// Business Hours
const businessHours = [
  { day: 'Mon-Thursday', hours: '9:00 AM - 9:00 PM' },
  { day: 'Fri-Sunday', hours: '9:00 AM - 5:00 PM' },
];

// Support Options
const supportOptions = [
  { name: 'Technical Support', description: '24/7 expert assistance' },
  { name: 'Project Inquiries', description: 'Start your project with us' },
  { name: 'Client Portal', description: 'Access your project dashboard' }
];

---

<footer class="relative bg-white dark:bg-gray-900 pt-20 pb-12 overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-purple-50/50 dark:from-gray-800/50 dark:to-gray-900/50">
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-5"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-6" dir={isRTL ? "rtl" : "ltr"}>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
      <!-- Logo and Company Info Section -->
      <div class="space-y-8">
        <div class="flex items-center space-x-3">
          <img src="/images/veblabslogoblue.webp" alt="Veblabs Logo" class="h-8 w-auto" />
          {isRTL ? (
            <span class="text-4xl font-bold">
              <span class="text-gray-900 dark:text-white">فيب</span>
              <span class="text-blue-600 dark:text-blue-400">لابز</span>
            </span>
          ) : (
            <span class="text-4xl font-bold">
              <span class="text-gray-900 dark:text-white">veb</span>
              <span class="text-blue-600 dark:text-blue-400">Labs</span>
            </span>
          )}
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-lg max-w-md">
          {translations.companyDescription}
        </p>
        <div class={`flex ${isRTL ? 'space-x-reverse' : ''} space-x-4`}>
          {socialLinks.map(social => (
            <a
              href={social.url}
              class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-blue-500 hover:text-white dark:hover:bg-blue-500 transition-all duration-300"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={`Follow us on ${social.name}`}
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Contact & Support Section -->
      <div class="lg:pl-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Contact Information -->
        <div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">{translations.contact.title}</h3>
          <div class="space-y-4">
            <a href={`tel:${contactInfo.phone}`} class="flex items-center space-x-3 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 group">
              <span class="w-8 h-8 rounded-lg bg-blue-50 dark:bg-gray-800 flex items-center justify-center group-hover:bg-blue-500">
                <i class="fas fa-phone-alt text-blue-600 dark:text-blue-400 group-hover:text-white"></i>
              </span>
              <span dir="ltr" class={`${isRTL ? 'text-right' : 'text-left'}`}>{contactInfo.phone}</span>
            </a>
            <a 
              href="#" 
              data-email={contactInfo.email}
              class="flex items-center space-x-3 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 group email-link"
            >
              <span class="w-8 h-8 rounded-lg bg-blue-50 dark:bg-gray-800 flex items-center justify-center group-hover:bg-blue-500">
                <i class="fas fa-envelope text-blue-600 dark:text-blue-400 group-hover:text-white"></i>
              </span>
              <span>{contactInfo.email}</span>
            </a>
            <a href="https://wa.me/919908174097" target="_blank" rel="noopener noreferrer" class="flex items-center space-x-3 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 group">
              <span class="w-8 h-8 rounded-lg bg-blue-50 dark:bg-gray-800 flex items-center justify-center group-hover:bg-blue-500">
                <i class="fab fa-whatsapp text-blue-600 dark:text-blue-400 group-hover:text-white"></i>
              </span>
              <span>WhatsApp</span>
            </a>
          </div>
          
          <!-- Added Contact Description -->
          <div class="mt-6 space-y-3">
            <p class="text-sm text-gray-600 dark:text-gray-400">
              {translations.contact.readyToStart}
            </p>
            <div class="flex items-center space-x-2 text-sm text-blue-600 dark:text-blue-400">
              <i class="fas fa-check-circle"></i>
              <span>{translations.contact.benefits.consultation}</span>
            </div>
            <div class="flex items-center space-x-2 text-sm text-blue-600 dark:text-blue-400">
              <i class="fas fa-check-circle"></i>
              <span>{translations.contact.benefits.response}</span>
            </div>
            <div class="flex items-center space-x-2 text-sm text-blue-600 dark:text-blue-400">
              <i class="fas fa-check-circle"></i>
              <span>{translations.contact.benefits.manager}</span>
            </div>
          </div>
        </div>

        <!-- Support & Hours -->
        <div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">{translations.support.title}</h3>
          <div class="space-y-6">
            <div class="space-y-3">
              {translations.support.options.map(option => (
                <div class="flex items-start space-x-3">
                  <span class="w-8 h-8 rounded-lg bg-blue-50 dark:bg-gray-800 flex items-center justify-center mt-1">
                    <i class="fas fa-headset text-blue-600 dark:text-blue-400"></i>
                  </span>
                  <div class="flex flex-col">
                    <span class="text-gray-900 dark:text-white font-medium">{option.name}</span>
                    <span class="text-sm text-gray-500 dark:text-gray-500">{option.description}</span>
                  </div>
                </div>
              ))}
            </div>

            <!-- Business Hours -->
            <div class="space-y-2">
              <div class="flex items-center space-x-2 text-gray-900 dark:text-white font-medium">
                <i class="fas fa-clock text-blue-600 dark:text-blue-400"></i>
                <span>{translations.support.businessHours.title}</span>
              </div>
              <div class="flex justify-between text-sm text-gray-600 dark:text-gray-400 ml-6">
                <span class="font-medium">{translations.support.businessHours.weekdays}</span>
              </div>
              <div class="flex justify-between text-sm text-gray-600 dark:text-gray-400 ml-6">
                <span class="font-medium">{translations.support.businessHours.weekend}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 py-12 border-t border-gray-200 dark:border-gray-800">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">{translations.quickLinks.title}</h3>
        <ul class="space-y-4">
          {translations.quickLinks.links.map(link => {
            // Add language prefix to the URL if it doesn't start with http or #
            const url = link.url.startsWith('http') || link.url.startsWith('#') 
              ? link.url 
              : `/${lang}${link.url.startsWith('/') ? '' : '/'}${link.url}`;
            return (
              <li>
                <a href={url} class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
                  {link.name}
                </a>
              </li>
            );
          })}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">{translations.services.title}</h3>
        <ul class="space-y-4">
          {translations.services.list.map(service => (
            <li>
              <span class="text-gray-600 dark:text-gray-400">{service}</span>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">{translations.contact.title}</h3>
        <div class="space-y-4 text-gray-600 dark:text-gray-400">
          <p>
            <a href={`tel:${contactInfo.phone}`} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              <span dir="ltr" class={`inline-block ${isRTL ? 'text-right' : 'text-left'}`}>{contactInfo.phone}</span>
            </a>
          </p>
          <p>
            <a 
              href="#" 
              data-email={contactInfo.email}
              class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300 email-link"
            >
              {contactInfo.email}
            </a>
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-200 dark:border-gray-800 pt-8">
      <div class="container mx-auto px-4">
        <div class="text-center text-sm text-gray-600 dark:text-gray-400">
          {currentYear} VEB Labs. {translations.copyright}
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.email-link').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const email = link.getAttribute('data-email');
        if (email) {
          window.location.href = `mailto:${email}`;
        }
      });
    });
  });
</script>