---
const currentYear = new Date().getFullYear();

// Social Media Links with Icons
const socialLinks = [
  { name: 'Twitter', url: '#', icon: 'i-fab-twitter' },
  { name: 'LinkedIn', url: '#', icon: 'i-fab-linkedin-in' },
  { name: 'GitHub', url: '#', icon: 'i-fab-github' },
  { name: 'Instagram', url: '#', icon: 'i-fab-instagram' }
];

// Quick Links
const quickLinks = [
  { name: 'Our Works', url: '/works' },
  { name: 'Services', url: '/services' },
  { name: 'Blog', url: '/blog' },
  { name: 'About Us', url: '/about' }
];

// Services
const services = [
  'Web Development',
  'Mobile Apps',
  'UI/UX Design',
  'Digital Marketing'
];
---

<footer class="relative bg-white dark:bg-gray-900 pt-20 pb-12 overflow-hidden">
  <!-- Background Decoration -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-purple-50/50 dark:from-gray-800/50 dark:to-gray-900/50">
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-5"></div>
  </div>

  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top Section with Logo and Newsletter -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <div class="space-y-8">
        <div class="flex items-center space-x-3">
          <img src="/images/veblabslogoblue.png" alt="Veblabs Logo" class="h-8 w-auto" />
          <span class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Veblabs</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-lg max-w-md">
          Transforming ideas into exceptional digital experiences. We craft innovative solutions that drive business growth.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a
              href={social.url}
              class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-blue-500 hover:text-white dark:hover:bg-blue-500 transition-all duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>
      
      <div class="lg:pl-12">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Stay Updated</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          Subscribe to our newsletter for the latest insights and updates.
        </p>
        <form class="flex space-x-2">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-lg bg-gray-100 dark:bg-gray-800 border border-transparent focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-20 transition-all duration-300"
          />
          <button
            type="submit"
            class="px-6 py-3 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium transition-all duration-300"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 py-12 border-t border-gray-200 dark:border-gray-800">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Quick Links</h3>
        <ul class="space-y-4">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.url}
                class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Services</h3>
        <ul class="space-y-4">
          {services.map(service => (
            <li class="text-gray-600 dark:text-gray-400">{service}</li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Contact</h3>
        <ul class="space-y-4 text-gray-600 dark:text-gray-400">
          <li class="flex items-center space-x-3">
            <i class="i-fas-envelope text-blue-500"></i>
            <span>contact@veblabs.com</span>
          </li>
          <li class="flex items-center space-x-3">
            <i class="i-fas-phone text-blue-500"></i>
            <span>+1 (555) 123-4567</span>
          </li>
          <li class="flex items-center space-x-3">
            <i class="i-fas-location-dot text-blue-500"></i>
            <span>San Francisco, CA</span>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Working Hours</h3>
        <ul class="space-y-4 text-gray-600 dark:text-gray-400">
          <li>Monday - Friday</li>
          <li class="font-medium">9:00 AM - 6:00 PM (PST)</li>
          <li class="mt-4 p-4 bg-gray-100 dark:bg-gray-800 rounded-lg">
            <span class="block font-medium text-blue-600 dark:text-blue-400">24/7 Support</span>
            <span class="text-sm">For urgent inquiries</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="pt-8 mt-12 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-600 dark:text-gray-400">
          {currentYear} Veblabs. All rights reserved.
        </p>
        <div class="flex space-x-6 text-sm">
          <a href="/privacy" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
            Privacy Policy
          </a>
          <a href="/terms" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
            Terms of Service
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>