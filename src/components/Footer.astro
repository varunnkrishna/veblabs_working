---
const currentYear = new Date().getFullYear();

// Social Media Links with Icons
const socialLinks = [
  { name: 'Twitter', url: '#', icon: 'i-fab-twitter' },
  { name: 'LinkedIn', url: '#', icon: 'i-fab-linkedin-in' },
  { name: 'GitHub', url: '#', icon: 'i-fab-github' },
  { name: 'Instagram', url: '#', icon: 'i-fab-instagram' }
];

// Quick Links
const quickLinks = [
  { name: 'Our Works', url: '/works' },
  { name: 'Services', url: '/services' },
  { name: 'Blog', url: '/blog' },
  { name: 'About Us', url: '/about' }
];

// Services
const services = [
  'Web Development',
  'Mobile Apps',
  'UI/UX Design',
  'Digital Marketing'
];

// Business Hours
const businessHours = [
  { day: 'Monday - Friday', hours: '9:00 AM - 6:00 PM' },
  { day: 'Saturday', hours: '10:00 AM - 4:00 PM' },
  { day: 'Sunday', hours: 'Closed' }
];
---

<footer class="relative bg-white dark:bg-gray-900 pt-20 pb-12 overflow-hidden">
  <!-- Background Decoration -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50/50 to-purple-50/50 dark:from-gray-800/50 dark:to-gray-900/50">
    <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-5"></div>
  </div>

  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top Section with Logo and Contact Info -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <div class="space-y-8">
        <div class="flex items-center space-x-3">
          <img src="/images/veblabslogoblue.png" alt="Veblabs Logo" class="h-8 w-auto" />
          <span class="text-4xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Veblabs</span>
        </div>
        <p class="text-gray-600 dark:text-gray-400 text-lg max-w-md">
          Transforming ideas into exceptional digital experiences. We craft innovative solutions that drive business growth.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map(social => (
            <a
              href={social.url}
              class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center text-gray-600 dark:text-gray-400 hover:bg-blue-500 hover:text-white dark:hover:bg-blue-500 transition-all duration-300"
              target="_blank"
              rel="noopener noreferrer"
            >
              <i class={social.icon}></i>
            </a>
          ))}
        </div>
      </div>
      
      <div class="lg:pl-12">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Contact & Support</h3>
        <div class="space-y-6">
          <!-- Quick Contact -->
          <div class="space-y-4">
            <a href="tel:+971123456789" class="flex items-center space-x-3 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              <i class="fas fa-phone-alt"></i>
              <span>+971 12 345 6789</span>
            </a>
            <a href="mailto:hi@veblabs.com" class="flex items-center space-x-3 text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              <i class="fas fa-envelope"></i>
              <span>hi@veblabs.com</span>
            </a>
          </div>
          
          <!-- Business Hours -->
          <div class="space-y-2">
            <h4 class="text-sm font-semibold text-gray-700 dark:text-gray-300">Business Hours</h4>
            {businessHours.map(schedule => (
              <div class="flex justify-between text-sm text-gray-600 dark:text-gray-400">
                <span>{schedule.day}</span>
                <span>{schedule.hours}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- Links Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 py-12 border-t border-gray-200 dark:border-gray-800">
      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Quick Links</h3>
        <ul class="space-y-4">
          {quickLinks.map(link => (
            <li>
              <a
                href={link.url}
                class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Services</h3>
        <ul class="space-y-4">
          {services.map(service => (
            <li class="text-gray-600 dark:text-gray-400">{service}</li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Location</h3>
        <address class="text-gray-600 dark:text-gray-400 not-italic">
          Office #304, Building 4<br />
          Dubai Internet City<br />
          Dubai, UAE
        </address>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Legal</h3>
        <ul class="space-y-4">
          <li>
            <a href="/privacy" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/terms" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              Terms of Service
            </a>
          </li>
          <li>
            <a href="/cookies" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
              Cookie Policy
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="pt-8 mt-12 border-t border-gray-200 dark:border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-600 dark:text-gray-400">
          {currentYear} Veblabs. All rights reserved.
        </p>
        <div class="flex items-center space-x-4">
          <a href="/sitemap" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
            Sitemap
          </a>
          <span class="text-gray-400">|</span>
          <a href="/accessibility" class="text-gray-600 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-300">
            Accessibility
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>