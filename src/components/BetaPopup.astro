<div id="beta-popup" class="fixed bottom-4 right-4 bg-white dark:bg-gray-800 p-4 rounded-lg shadow-lg max-w-sm border border-gray-200 dark:border-gray-700 z-50">
  <div class="flex items-start justify-between">
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
        ðŸš§ Beta Testing
      </h3>
      <p class="text-gray-600 dark:text-gray-300 text-sm">
        This website is currently in beta. For project inquiries, please contact us at{" "}
        <a 
          href="#" 
          data-email="hi@veblabs.com"
          class="text-blue-600 dark:text-blue-400 hover:underline"
          onclick="window.location.href = 'mailto:' + this.dataset.email; return false;"
        >hi[at]veblabs.com</a>
      </p>
    </div>
    <button 
      onclick="const popup = document.getElementById('beta-popup'); if (popup) { popup.style.display = 'none'; localStorage.setItem('beta-popup-closed', 'true'); }"
      class="ml-4 text-gray-400 hover:text-gray-500 dark:hover:text-gray-300"
      aria-label="Close"
    >
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
</div>

<script>
  // Show popup only if it hasn't been closed before
  window.addEventListener('load', () => {
    const popup = document.getElementById('beta-popup');
    if (!localStorage.getItem('beta-popup-closed') && popup) {
      popup.style.display = 'block';
    }
  });
</script>

<style>
  #beta-popup {
    display: none;
    animation: slideIn 0.5s ease-out;
  }

  @keyframes slideIn {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
