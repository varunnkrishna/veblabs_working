---
export interface ProjectData {
  title: string;
  description: string;
  category: string;
  image: string;
  client: string;
  tags: string[];
  results: string[];
}

interface Props {
  project: ProjectData;
}

const { project } = Astro.props;
---

<header class="relative">
  <div class="h-[20vh]  w-full relative">
    <img
      src={project.image}
      alt={project.title}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>
  
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto -mt-20 relative bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8">
      <div class="flex flex-wrap gap-4 mb-6">
        {project.tags.map(tag => (
          <span class="px-4 py-1 bg-primary/10 text-primary rounded-full text-sm">
            {tag}
          </span>
        ))}
      </div>
      
      <h1 class="text-4xl font-bold mb-4">{project.title}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        {project.description}
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-semibold mb-2">Client</h3>
          <p class="text-gray-600 dark:text-gray-400">{project.client}</p>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Category</h3>
          <p class="text-gray-600 dark:text-gray-400">{project.category}</p>
        </div>
      </div>
    </div>
  </div>
</header>