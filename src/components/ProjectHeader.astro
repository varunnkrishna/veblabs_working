---
export interface ProjectData {
  title: string;
  description: string;
  category: string;
  image: string;
  client: string;
  results: string[];
}

interface Props {
  project: ProjectData;
}

const { project } = Astro.props;
---

<header class="relative">
  <div class="h-[20vh] w-full relative">
    <img
      src={project.image}
      alt={project.title}
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/50"></div>
  </div>
  
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto -mt-20 relative bg-white dark:bg-gray-800 rounded-lg shadow-xl p-8">
      <span class="inline-block px-4 py-1.5 bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full text-sm font-medium mb-6">
        {project.category}
      </span>
      
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">{project.title}</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
        {project.description}
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Client</h3>
          <p class="text-gray-600 dark:text-gray-400">{project.client}</p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2">Category</h3>
          <p class="text-gray-600 dark:text-gray-400">{project.category}</p>
        </div>
      </div>
      
      {project.results && project.results.length > 0 && (
        <div class="mt-8">
          <h3 class="font-semibold mb-4 dark:text-white">Key Results</h3>
          <ul class="space-y-2">
            {project.results.map(result => (
              <li class="flex items-start gap-2">
                <span class="text-blue-500">â€¢</span>
                <span class="text-gray-600 dark:text-gray-400">{result}</span>
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </div>
</header>