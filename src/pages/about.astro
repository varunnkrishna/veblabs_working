---
import Layout from '../layouts/Layout.astro';

const founderInfo = {
  name: "Varun",
  role: "Founder & CEO",
  image: "/images/team/john.jpg",
  bio: "15+ years of experience in web development and digital strategy"
};
---

<Layout title="About Veblabs - Innovation Meets Excellence">
  <!-- Hero Section with Animated Gradient -->
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/20 via-purple-500/20 to-blue-500/20 animate-gradient-xy"></div>
    <div class="max-w-7xl mx-auto px-4 py-24 relative">
      <div class="text-center">
        <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6 animate-fade-in">
          Crafting Digital Excellence
        </h1>
        <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-300 max-w-3xl mx-auto animate-fade-in-up">
          Where innovation meets execution, creating exceptional digital experiences that drive business growth.
        </p>
      </div>
    </div>
  </div>

  <!-- Founder Section -->
  <div class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-purple-600 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-500"></div>
        <div class="relative bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl transform hover:-translate-y-1 transition duration-300">
          <div class="w-32 h-32 mx-auto mb-6 overflow-hidden rounded-full ring-4 ring-primary/30">
            <img src={founderInfo.image} alt={founderInfo.name} class="w-full h-full object-cover" />
          </div>
          <h2 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-2">{founderInfo.name}</h2>
          <p class="text-primary text-center mb-4">{founderInfo.role}</p>
          <p class="text-gray-600 dark:text-gray-400 text-center">{founderInfo.bio}</p>
        </div>
      </div>

      <div class="space-y-6">
        <div class="transform hover:scale-105 transition duration-300">
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Our Vision</h3>
          <p class="text-gray-600 dark:text-gray-400">
            To revolutionize the digital landscape by creating innovative solutions that empower businesses to thrive in the modern era.
          </p>
        </div>

        <div class="transform hover:scale-105 transition duration-300">
          <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">Our Approach</h3>
          <p class="text-gray-600 dark:text-gray-400">
            We combine cutting-edge technology with creative design thinking to deliver solutions that not only meet but exceed expectations.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Values Section with Gradient Cards -->
  <div class="max-w-7xl mx-auto px-4 py-16">
    <h2 class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">Our Core Values</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {[
        {
          title: "Innovation",
          description: "Pushing boundaries with cutting-edge solutions",
          gradient: "from-primary to-purple-600"
        },
        {
          title: "Excellence",
          description: "Delivering exceptional quality in everything we do",
          gradient: "from-purple-600 to-blue-500"
        },
        {
          title: "Integrity",
          description: "Building trust through transparency and honesty",
          gradient: "from-blue-500 to-primary"
        }
      ].map(value => (
        <div class="group relative p-1 rounded-2xl transition-all duration-300 hover:-translate-y-2">
          <div class={`absolute inset-0 bg-gradient-to-r ${value.gradient} rounded-2xl opacity-75 blur-sm group-hover:opacity-100 transition duration-300`}></div>
          <div class="relative bg-white dark:bg-gray-800 p-6 rounded-2xl h-full">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{value.title}</h3>
            <p class="text-gray-600 dark:text-gray-400">{value.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .animate-gradient-xy {
    animation: gradient-xy 15s ease infinite;
    background-size: 400% 400%;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out;
  }

  @keyframes gradient-xy {
    0%, 100% {
      background-position: 0% 0%;
    }
    25% {
      background-position: 100% 0%;
    }
    50% {
      background-position: 100% 100%;
    }
    75% {
      background-position: 0% 100%;
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>