---
import Layout from '../layouts/Layout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CtaOne from '../components/Ctaone.astro';
import Button from '../components/Button.astro';
import { getLanguageFromURL } from '../i18n/utils';

const lang = getLanguageFromURL(Astro.url.pathname);

const services = [
  {
    title: "Web Development",
    description: "Building modern, scalable, and performant web applications using cutting-edge technologies and best practices.",
    icon: "code",
    features: ["Full-stack Development", "Progressive Web Apps", "API Integration", "Cloud Deployment"]
  },
  {
    title: "UI/UX Design",
    description: "Creating intuitive and engaging user experiences through research-driven design solutions.",
    icon: "palette",
    features: ["User Research", "Interface Design", "Design Systems", "Interactive Prototypes"]
  },
  {
    title: "E-Commerce Solutions",
    description: "Building secure and scalable online stores that drive conversions and enhance customer experience.",
    icon: "shopping-cart",
    features: ["Custom E-commerce", "Payment Integration", "Inventory Management", "Analytics Dashboard"]
  },
  {
    title: "Digital Marketing",
    description: "Data-driven digital marketing strategies to boost your online presence and drive growth.",
    icon: "chart-line",
    features: ["SEO Optimization", "Content Strategy", "Social Media", "Performance Analytics"]
  },
  {
    title: "Cloud Solutions",
    description: "Scalable cloud infrastructure and services to power your digital transformation.",
    icon: "cloud",
    features: ["Cloud Architecture", "DevOps", "Serverless", "Microservices"]
  },
  {
    title: "Maintenance & Support",
    description: "Comprehensive maintenance and support services to keep your systems running smoothly.",
    icon: "wrench",
    features: ["24/7 Support", "Security Updates", "Performance Monitoring", "Backup Solutions"]
  }
];
---

<Layout title="Services - Veblabs">
  {/* Hero Section */}
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-light-primary/30 via-light-primary/5 to-transparent dark:from-dark-primary/20 dark:via-dark-primary/10">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10"></div>
    </div>
    
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 lg:pt-32 pb-20">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          {/* Left Content */}
          <div class="flex-1 text-center lg:text-left">
            <h1 class="font-inter text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
              Empowering Your <br class="hidden lg:block" />
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-500 dark:from-blue-400 dark:to-purple-400">
                Digital Success
              </span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed mb-8 max-w-2xl mx-auto lg:mx-0">
              We combine cutting-edge technology with creative innovation to deliver exceptional digital solutions that drive growth and transform businesses.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">

              <Button href={`/${lang}/get-in-touch`} variant="primary" text="Start a Project" />

              <Button href={`/${lang}/works`} variant="secondary" text="View Our Work" />
            </div>
          </div>


          {/* Right Content - Abstract Shapes */}
          <div class="relative w-full lg:w-1/2 h-[400px] lg:h-[500px]">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-gradient-to-br from-primary/40 to-purple-500/40 rounded-full blur-3xl"></div>
            <div class="absolute top-1/4 right-1/4 w-48 h-48 bg-gradient-to-br from-blue-500/30 to-primary/30 rounded-full blur-2xl"></div>
            <div class="absolute bottom-1/4 left-1/3 w-60 h-60 bg-gradient-to-br from-purple-500/30 to-pink-500/30 rounded-full blur-2xl"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="relative w-80 h-80">
                <div class="absolute inset-0 bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-3xl transform rotate-6"></div>
                <div class="absolute inset-0 bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-3xl transform -rotate-6"></div>
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-lg rounded-3xl">
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="font-inter text-6xl font-bold text-white/90">vebLabs</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Services Grid */}
  <div id="services" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => <ServiceCard {...service} />)}
    </div>
  </div>

  {/* Why Choose Us Section */}
  <div class="bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Why Choose Veblabs?
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400">
          We combine technical expertise with creative innovation to deliver exceptional results.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          {
            title: "Expert Team",
            description: "Skilled professionals with years of industry experience",
            icon: "users"
          },
          {
            title: "Modern Tech Stack",
            description: "Using the latest technologies and frameworks",
            icon: "layer-group"
          },
          {
            title: "Agile Process",
            description: "Flexible and iterative development approach",
            icon: "sync"
          },
          {
            title: "24/7 Support",
            description: "Round-the-clock technical assistance",
            icon: "headset"
          }
        ].map(item => (
          <div class="text-center p-8 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-primary/50 dark:hover:border-primary/50 transition-all duration-300 hover:shadow-lg hover:shadow-primary/5 group">
            <div class="w-16 h-16 mx-auto mb-6 flex items-center justify-center bg-primary/10 text-primary rounded-xl group-hover:bg-primary group-hover:text-white transform transition-all duration-300 ease-in-out group-hover:scale-110">
              <i class={`fas fa-${item.icon} text-2xl`}></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4 group-hover:text-primary transition-colors duration-300">{item.title}</h3>
            <p class="text-gray-600 dark:text-gray-400 leading-relaxed group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors duration-300">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  {/* CTA Section */}
  <CtaOne />
</Layout>