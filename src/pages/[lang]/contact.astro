---
import { supportedLanguages } from '../../i18n/config';
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return Object.keys(supportedLanguages).map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof supportedLanguages);
const navT = await t('nav');

---
<Layout 
  title={`Contact Us | VebLabs`}
  description={lang === 'ar' 
    ? 'تواصل مع فريقنا المتخصص للحصول على استشارة مجانية حول مشروعك. نحن هنا لمساعدتك في تحقيق رؤيتك الرقمية.'
    : 'Connect with our expert team for a free consultation about your project. We\'re here to help bring your digital vision to life.'}
>
  <main>
    <h1>Contact Us</h1>
    <!-- Your contact page content here -->
  </main>
</Layout>
