---
import { supportedLanguages } from '../../i18n/config';
import { useTranslations } from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import CtaOne from '../../components/Ctaone.astro';
import Button from '../../components/Button.astro';
import type { ServiceTranslations } from '../../i18n/types';

export function getStaticPaths() {
  return Object.keys(supportedLanguages).map(lang => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as keyof typeof supportedLanguages);
const translations = await t('services') as ServiceTranslations;

const services = [
  {
    title: translations?.services?.webDev?.title ?? "Web Development",
    description: translations?.services?.webDev?.description ?? "Building modern, scalable web applications",
    icon: "code",
    features: translations?.services?.webDev?.features ?? []
  },
  {
    title: translations?.services?.uiux?.title ?? "UI/UX Design",
    description: translations?.services?.uiux?.description ?? "Creating intuitive user experiences",
    icon: "palette",
    features: translations?.services?.uiux?.features ?? []
  },
  {
    title: translations?.services?.ecommerce?.title ?? "E-Commerce Solutions",
    description: translations?.services?.ecommerce?.description ?? "Building secure online stores",
    icon: "shopping-cart",
    features: translations?.services?.ecommerce?.features ?? []
  },
  {
    title: translations?.services?.marketing?.title ?? "Digital Marketing",
    description: translations?.services?.marketing?.description ?? "Data-driven marketing strategies",
    icon: "chart-line",
    features: translations?.services?.marketing?.features ?? []
  },
  {
    title: translations?.services?.cloud?.title ?? "Cloud Solutions",
    description: translations?.services?.cloud?.description ?? "Scalable cloud infrastructure",
    icon: "cloud",
    features: translations?.services?.cloud?.features ?? []
  },
  {
    title: translations?.services?.support?.title ?? "Maintenance & Support",
    description: translations?.services?.support?.description ?? "Comprehensive maintenance services",
    icon: "wrench",
    features: translations?.services?.support?.features ?? []
  }
];
---

<Layout title={translations?.title ?? "Services - Veblabs"}>
  {/* Hero Section */}
  <div class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-light-primary/30 via-light-primary/5 to-transparent dark:from-dark-primary/20 dark:via-dark-primary/10">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10"></div>
    </div>
    
    <div class="relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 lg:pt-32 pb-20">
        <div class="flex flex-col lg:flex-row items-center gap-12">
          {/* Left Content */}
          <div class="flex-1 text-center lg:text-left">
            <h1 class="font-inter text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-500 dark:from-blue-400 dark:to-purple-400">
                {translations?.hero?.heading ?? "Empowering Your Digital Success"}
              </span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400 leading-relaxed mb-8 max-w-2xl mx-auto lg:mx-0">
              {translations?.hero?.description ?? "We combine cutting-edge technology with creative innovation to deliver exceptional digital solutions."}
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <Button href={`/${lang}/contact`} variant="primary" text={translations?.hero?.startProject ?? "Start a Project"} />
              <Button href={`/${lang}/works`} variant="secondary" text={translations?.hero?.viewWork ?? "View Our Work"} />
            </div>
          </div>

          {/* Right Content - Abstract Shapes */}
          <div class="relative w-full lg:w-1/2 h-[400px] lg:h-[500px]">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-gradient-to-br from-primary/40 to-purple-500/40 rounded-full blur-3xl"></div>
            <div class="absolute top-1/4 right-1/4 w-48 h-48 bg-gradient-to-br from-blue-500/30 to-primary/30 rounded-full blur-2xl"></div>
            <div class="absolute bottom-1/4 left-1/3 w-60 h-60 bg-gradient-to-br from-purple-500/30 to-pink-500/30 rounded-full blur-2xl"></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="relative w-80 h-80">
                <div class="absolute inset-0 bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-3xl transform rotate-6"></div>
                <div class="absolute inset-0 bg-white/10 dark:bg-white/5 backdrop-blur-lg rounded-3xl transform -rotate-6"></div>
                <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-white/5 backdrop-blur-lg rounded-3xl">
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="font-inter text-6xl font-bold text-white/90">vebLabs</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {/* Services Grid */}
  <div id="services" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map(service => (
        <ServiceCard
          title={service.title}
          description={service.description}
          icon={service.icon}
          features={service.features}
        />
      ))}
    </div>
  </div>

  {/* Why Choose Us Section */}
  <div class="bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          {translations?.whyChooseUs?.title ?? "Why Choose Veblabs?"}
        </h2>
      </div>
    </div>
  </div>

  <CtaOne />
</Layout>
