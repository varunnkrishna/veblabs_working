---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactInfo = [
  {
    icon: "map",
    title: "Visit Us",
    content: "123 Business Street, Suite 100, City, State 12345"
  },
  {
    icon: "phone",
    title: "Call Us",
    content: "+1 (555) 123-4567"
  },
  {
    icon: "mail",
    title: "Email Us",
    content: "contact@veblabs.com"
  }
];
---

<Layout title="Contact Us - Veblabs">
  {/* Hero Section */}
  <div class="relative bg-gradient-to-b from-blue-50 to-white dark:from-gray-900 dark:to-gray-800 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
      <div class="text-center max-w-3xl mx-auto">
        <span class="text-blue-600 dark:text-blue-400 font-semibold tracking-wide uppercase">Contact Us</span>
        <h1 class="mt-3 text-4xl md:text-5xl lg:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 mb-6">
          Get in Touch
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          Have a project in mind? Let's discuss how we can help you achieve your goals.
        </p>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {contactInfo.map(info => (
        <div class="text-center p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-shadow">
          <div class="w-12 h-12 mx-auto mb-4 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 rounded-full">
            <i class={`fas fa-${info.icon}`}></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{info.title}</h3>
          <p class="text-gray-600 dark:text-gray-400">{info.content}</p>
        </div>
      ))}
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-sm">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Send Us a Message</h2>
        <ContactForm />
      </div>
      <div class="bg-gray-100 dark:bg-gray-700 rounded-lg overflow-hidden">
        <!-- Replace with your map embed code -->
        <div class="h-full min-h-[400px] bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
          <span class="text-gray-500 dark:text-gray-400">Map Placeholder</span>
        </div>
      </div>
    </div>
  </div>
</Layout>