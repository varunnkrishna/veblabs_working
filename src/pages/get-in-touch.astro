---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';

const benefits = [
  {
    title: "24/7 Support",
    description: "Our dedicated team is always ready to assist you.",
    icon: "headset"
  },
  {
    title: "Quick Response",
    description: "Get responses within 24 hours on business days.",
    icon: "bolt"
  },
  {
    title: "Expert Team",
    description: "Work with our experienced professionals.",
    icon: "users"
  }
];
---

<Layout title="Get in Touch - Veblabs">
  {/* Hero Section */}
  <div class="relative bg-gradient-to-b from-blue-50 to-white dark:from-gray-900 dark:to-gray-800 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-[url('/images/grid.svg')] opacity-10"></div>
      <div class="absolute inset-0 bg-gradient-to-b from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
      <div class="text-center max-w-3xl mx-auto">
        <span class="text-blue-600 dark:text-blue-400 font-semibold tracking-wide uppercase">Let's Connect</span>
        <h1 class="mt-3 text-4xl md:text-5xl lg:text-6xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600 dark:from-blue-400 dark:to-purple-400 mb-6">
          Start Your Project Today
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          Fill out the form below and we'll get back to you within 24 hours.
        </p>
      </div>
    </div>
  </div>

  {/* Main Content */}
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      {/* Contact Form Section */}
      <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-lg">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Tell us about your project</h2>
        <ContactForm />
      </div>

      {/* Image and Benefits Section */}
      <div class="space-y-12">
        <div class="relative rounded-2xl overflow-hidden">
          <img
            src="/images/contact-illustration.svg"
            alt="Contact Illustration"
            class="w-full h-auto"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/30 to-transparent"></div>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-1 gap-6">
          {benefits.map(benefit => (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-xl shadow-sm hover:shadow-md transition-shadow">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 flex items-center justify-center rounded-full bg-blue-100 dark:bg-blue-900/30">
                    <i class={`fas fa-${benefit.icon} text-xl text-blue-600 dark:text-blue-400`}></i>
                  </div>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{benefit.title}</h3>
                  <p class="text-gray-600 dark:text-gray-400">{benefit.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

  {/* Additional Information */}
  <div class="bg-gray-50 dark:bg-gray-800/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-full">
            <i class="fas fa-map-marker-alt text-2xl text-blue-600 dark:text-blue-400"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Office Location</h3>
          <p class="text-gray-600 dark:text-gray-400">123 Business Street,<br/>Suite 100, City, State 12345</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-full">
            <i class="fas fa-phone-alt text-2xl text-blue-600 dark:text-blue-400"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Phone Number</h3>
          <p class="text-gray-600 dark:text-gray-400">+1 (555) 123-4567<br/>Mon-Fri 9am-6pm</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center bg-blue-100 dark:bg-blue-900/30 rounded-full">
            <i class="fas fa-envelope text-2xl text-blue-600 dark:text-blue-400"></i>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Email Address</h3>
          <p class="text-gray-600 dark:text-gray-400">contact@veblabs.com<br/>support@veblabs.com</p>
        </div>
      </div>
    </div>
  </div>

  <Footer />
</Layout>
